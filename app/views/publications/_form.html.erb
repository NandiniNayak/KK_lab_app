<div class="login-center">
  <%= simple_form_for(@publication) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :year %>
      <%= f.input :title %>
      <%= f.input :publink %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
